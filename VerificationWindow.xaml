<Window x:Class="Digital_Signature_Verification.VerificationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Digital_Signature_Verification"
        mc:Ignorable="d"
        Title="Verification Window" Height="450" Width="600">
    <DockPanel LastChildFill="True">
        <Label Content="File Contents" DockPanel.Dock="Top" HorizontalContentAlignment="Center" FontWeight="DemiBold" FontSize="14" Background="AliceBlue"/>
        <TextBox x:Name="FileContents" Text="TextBox" TextWrapping="Wrap" DockPanel.Dock="Top" Height="360" VerticalScrollBarVisibility="Auto"/>
        <StackPanel Orientation="Horizontal">
            <Button x:Name="DecryptButton" DockPanel.Dock="Bottom" Width="200" Content="DECRYPT" Click="DecryptButton_Click"/>
            <Button x:Name="VerifyButton" DockPanel.Dock="Bottom" Width="200" Content="VERIFY" Click="VerifyButton_Click"/>
            <Button x:Name="SaveButton" DockPanel.Dock="Bottom" Width="200" Content="SAVE" Click="SaveButton_Click"/>
        </StackPanel>
    </DockPanel>
</Window>
